<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Boxes.Components.UserCard"
	Width="345"
	Height="180"
	Cursor="Hand"
	ToolTipService.ToolTip="Please, drag me!">
	<Border
		Style="{StaticResource UserCardBorder}">
		<Grid
			x:Name="LayoutRoot"
			Style="{StaticResource UserCardLayout}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="150" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="30" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>

			<Image
				x:Name="UserImage"
				Width="130"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				Margin="0,10,0,0"
				Grid.Row="0"
				Grid.Column="0"
				Grid.RowSpan="2"
				Source="{Binding Path=Image}" />
			<TextBlock
				x:Name="UserNameTextBox"
				Height="32"
				VerticalAlignment="Top"
				FontSize="18"
				TextWrapping="NoWrap"
				Grid.Row="0"
				Grid.Column="1"
				Margin="0,5,10,0"
				Text="{Binding User.Name}"/>
			<TextBlock
				x:Name="UserDescriptionTextBox"
				TextWrapping="Wrap"
				Grid.Row="1"
				Grid.Column="1"
				Margin="0,5,10,10"
				LineHeight="0"
				FontSize="11"
				FontStyle="Italic"
				Text="{Binding User.Description}" />
		</Grid>
	</Border>
</UserControl>