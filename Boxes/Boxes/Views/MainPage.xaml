<UserControl
    x:Class="Boxes.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border
		x:Name="LayoutRoot"
		Style="{StaticResource LayoutRoot}">
		<Canvas
			x:Name="MainCanvas"
			Loaded="OnLoaded">
			<TextBlock
				Text="THE PRESIDENTS"
				Style="{StaticResource LogoText}"
				FontSize="60"
				FontWeight="ExtraBold"
				Canvas.Top="-20"
				Canvas.ZIndex="0"/>
			<TextBlock
				Text="OF THE USA"
				Style="{StaticResource LogoText}"
				FontSize="60"
				FontWeight="ExtraBold"
				Canvas.Top="26"
				Canvas.Left="1"
				Canvas.ZIndex="0" />
		</Canvas>
	</Border>
</UserControl>